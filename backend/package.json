{
    "name": "conformity-dashboard-api",
    "version": "1.0.0",
    "description": "Dashboard API for metrics",
    "main": "src/index.js",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "winston": "^3.15.0"
    },
    "scripts": {
        "build": "npx tsc",
        "start": "node dist/index.js",
        "dev": "nodemon src/index.ts",
        "test": "jest --verbose",
        "test:watch": "jest --watch"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "moduleFileExtensions": ["ts", "js", "json"],
        "testMatch": ["**/tests/**/*.test.ts"],
        "transform": {
          "^.+\\.ts?$": "ts-jest"
        }
      },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.13",
        "@types/node": "^22.7.5",
        "@types/supertest": "^6.0.2",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2"
    }
}
